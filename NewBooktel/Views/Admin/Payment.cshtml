                background: #c82333;
                color: white;
            }

        .nav-link.active {
            background-color: #f8f9fa;
            color: black !important;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            padding-left: 15px;
            padding-top: 8px;
            padding-bottom: 8px;
            margin-right: 0;
            overflow: hidden;
            white-space: nowrap;
        }

        .payment-table th, .payment-table td {
            text-align: center;
        }

        .payment-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 15px #00163a;
        }

