@model List<NewBooktel.Models.ContactUs>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "User Feedback";
}

<div class="container mt-5">
   

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="booktel-header-bg">
                    <tr>
                       
                        <th scope="col" class="border-0">Name</th>
                        <th scope="col" class="border-0">Email</th>
                        <th scope="col" class="border-0">Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           
                            <td class="border-0">@item.Name</td>
                            <td class="border-0"><a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a></td>
                            <td class="border-0" style="white-space: pre-line;">@item.Message</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-light" role="alert">
            No user feedback available.
        </div>
    }
</div>

<style>
    .table {
        border-collapse: collapse;
        width: 100%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .table th,
        .table td {
            padding: 1rem;
            text-align: left;
        }

    .booktel-header-bg th {
        background-color: #00163a !important;
        color: #ffffff !important;
    }

    .table th {
        font-weight: 500;
    }

    .table tbody tr {
        background-color: #fff;
        transition: background-color 0.2s ease-in-out;
    }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #f0f0f0;
        }

    .table td {
        color: #343a40;
        font-size: 0.9rem;
    }

    .table a {
        color: #007bff;
    }

        .table a:hover {
            color: #0056b3;
        }

    .alert-light {
        background-color: #f8f9fa;
        color: #383d41;
        border: 1px solid #f8f9fa;
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
    }
</style>
