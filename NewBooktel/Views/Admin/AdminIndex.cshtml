@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <!-- Dashboard Cards -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5><i class="fas fa-bed"></i> Room Types</h5>
                    <h2>@ViewBag.RoomTypes</h2>
                    <a href="/Admin/Rooms" class="text-white">Add New</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5><i class="fas fa-calendar-check"></i> Booking Request</h5>
                    <h2>@ViewBag.NewBookings</h2>
                    <a href="/Admin/BookingReq" class="text-white">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5><i class="fas fa-thumbs-up"></i> Payment</h5>
                    <h2>@ViewBag.ConfirmedBookings</h2>
                    <a href="/Admin/Payment" class="text-white">View Payments</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5><i class="fas fa-gift"></i> Special Offers</h5>
                    <h2>@ViewBag.SpecialOffers</h2>
                    <a href="/Admin/SpecialOffers" class="text-white">View Special Offers</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Bookings Table -->
    <h3 class="mt-5">Latest Bookings</h3>

    @if (ViewBag.LatestBookings != null && ViewBag.LatestBookings.Count > 0)
    {
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Room Type</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Total</th>
                    <th>Guest Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in ViewBag.LatestBookings)
                {
                    <tr>
                        <td>@booking.Code</td>
                        <td>@booking.RoomType</td>
                        <td>@booking.CheckInDate.ToShortDateString()</td>
                        <td>@booking.CheckOutDate.ToShortDateString()</td>
                        <td>@string.Format("{0:C}", booking.TotalAmount)</td>
                        <td>@booking.FullName</td>
                        <td>@booking.Email</td>
                        <td>@booking.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-3">No recent bookings found.</p>
    }
</div>