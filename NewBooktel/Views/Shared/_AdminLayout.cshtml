<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #00163a;
            color: white;
            padding: 20px;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
			margin-right: 0px;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        .logout-btn {
            background: #dc3545;
            color: white;
            border: none;
            width: 100%;
            padding: 10px;
            text-align: center;
            font-weight: bold;
            border-radius: 5px;
            margin-top: auto;
        }

            .logout-btn:hover {
                background: #c82333;
                color: white;
            }

        /* ✅ Change text color to yellow for active sidebar links */
        .nav-link.active {
            background-color: #f8f9fa; /* Light gray background */
            color: black !important; /* Text color */
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            padding-left: 15px;
            padding-top: 8px;
            padding-bottom: 8px;
            margin-right: 0;
            overflow: hidden;
            white-space: nowrap;
        }

    </style>
</head>
<body>

    @{
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    }

    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <h3>Admin Panel</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "AdminIndex" ? "active" : "")"
                       asp-controller="Admin" asp-action="AdminIndex">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "BookingReq" ? "active" : "")"
                       asp-controller="Admin" asp-action="BookingReq">Bookings</a> 
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Rooms" ? "active" : "")"
                       asp-controller="Admin" asp-action="Rooms">Rooms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Payment" ? "active" : "")"
                       asp-controller="Admin" asp-action="Payment">Payments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Housekeeping" ? "active" : "")"
                       asp-controller="Admin" asp-action="Housekeeping">Housekeeping</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Feedback" ? "active" : "")"
                       asp-controller="Admin" asp-action="Feedback">Feedback</a>
                </li>
            </ul>
        </div>

        <!-- Logout Button -->
        <form asp-controller="Auth" asp-action="Logout" method="get">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>