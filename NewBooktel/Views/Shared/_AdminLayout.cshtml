<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #00163a;
            color: white;
            padding: 20px;
            position: fixed;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Admin Panel</h3>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="AdminIndex">Dashboard</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="BookingReq">Bookings</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Rooms">Rooms</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Payment">Payments</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Housekeeping">Housekeeping</a></li>
        </ul>



    </div>

    <!-- Main Content -->
    
        @RenderBody()
    

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
