@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
}

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <h3>Front Desk Panel</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Dashboard" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "CheckIn" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="CheckIn">Check-In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "CheckOut" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="CheckOut">Check-Out</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Reservations" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="Reservations">Reservations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Guests" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="Guests">Guests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentAction == "Payments" ? "active" : "")"
                       asp-controller="FrontDesk" asp-action="Payments">Payments</a>
                </li>
            </ul>
        </div>

        <!-- Logout Button -->
        <form asp-controller="Auth" asp-action="Logout" method="get">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
