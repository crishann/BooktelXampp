<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewBooktel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewBooktel.styles.css" asp-append-version="true" />

    <style>
        /* ✅ Yellow highlight for active navbar items */
        .navbar-nav .nav-link.active {
            color: #ffc107 !important;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
            <div class="container">
                <a class="navbar-brand text-warning" asp-controller="Home" asp-action="Index">BookTel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "UserDash" && ViewContext.RouteData.Values["Action"].ToString() == "Reservation" ? "active" : "")"
                               asp-controller="UserDash" asp-action="Reservation">Reservation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"
                               asp-controller="Home" asp-action="Contact">Contact us</a>
                        </li>

                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserFirstName")))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "UserDash" && ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active" : "")"
                                   asp-controller="UserDash" asp-action="Profile"> @Context.Session.GetString("UserFirstName")</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Auth" && ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "active" : "")"
                                   asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Auth" && ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")"
                                   asp-controller="Auth" asp-action="Login">Log in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
