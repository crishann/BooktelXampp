<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex; /* For sidebar layout */
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #00163a;
            color: white;
            padding: 20px;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            margin-right: 0px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                margin-bottom: 10px;
                display: block;
                /* Add some padding for better click area if desired */
                padding: 5px 0;
            }

            /* New styles for the logout button */
            .sidebar .logout-btn {
                background: none; /* Remove default button background */
                border: none; /* Remove default button border */
                color: white; /* Match link color */
                padding: 0; /* Remove default button padding, adjust as needed */
                margin: 0; /* Remove default button margin, adjust as needed */
                text-align: left; /* Align text like the links */
                text-decoration: none; /* Ensure no underline from button defaults */
                display: block; /* Make it take the full width like the links */
                width: 100%; /* Ensure it takes full available width */
                margin-bottom: 10px; /* Match link margin */
                cursor: pointer; /* Show pointer on hover */
                /* Add some padding for better click area if desired, similar to links */
                padding: 5px 0;
                font-size: inherit; /* Make it use the same font size as surrounding text */
                font-family: inherit; /* Make it use the same font family */
            }

                .sidebar .logout-btn:hover {
                    text-decoration: underline; /* Optional: Add underline on hover like typical links */
                }
        /* ... rest of your existing CSS ... */
        .content {
            margin-left: 260px;
            padding: 20px;
            flex-grow: 1; /* Allow content to take remaining width */
        }

        .housekeeping-table th, .housekeeping-table td {
            text-align: center;
        }

        .task-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div>
            <h3>Housekeeping Panel</h3>
            <hr>
            <a href="/Housekeeping/Index">Dashboard</a>
            <a href="/Housekeeping/AssignedRooms">Assigned Rooms</a>
        </div>
        <div>
            <hr>
            <form asp-controller="Auth" asp-action="Logout" method="get">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>