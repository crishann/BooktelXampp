@model NewBooktel.Models.Booking

@{
    ViewData["Title"] = "Make a Reservation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            background: #f8f9fa;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
            padding: 20px;
        }

        .reservation-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .content-container {
            display: flex;
            flex-grow: 1;
            gap: 20px;
            overflow: hidden;
        }

        .hotels-section {
            flex: 1;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            max-height: calc(100vh - 120px);
        }

        .hotel-card {
            display: flex;
            background: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 15px;
            align-items: center;
        }

            .hotel-card img {
                width: 100px;
                height: 100px;
                border-radius: 5px;
                margin-right: 15px;
            }

        .invoice-section {
            flex: 1;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 120px;
            height: fit-content;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="reservation-container">
            <form method="get" asp-action="Index" asp-controller="UserDash">
                <div class="row g-2">
                    <div class="col-md-3">
                        <label class="fw-bold">Check-in Date</label>
                        <input type="date" class="form-control" name="CheckInDate" asp-for="CheckInDate" />
                    </div>
                    <div class="col-md-3">
                        <label class="fw-bold">Check-out Date</label>
                        <input type="date" class="form-control" name="CheckOutDate" asp-for="CheckOutDate" />
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Guests</label>
                        <select class="form-select" name="Guest" asp-for="Guest">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Room Type</label>
                        <select class="form-select" name="RoomType" asp-for="RoomType">
                            <option value="Standard">Standard</option>
                            <option value="Deluxe">Deluxe</option>
                            <option value="Suite">Suite</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-warning w-100">Book Now</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="content-container">
            <div class="hotels-section">
                <h3 class="mb-3">Available Hotels & Rooms</h3>

                <div class="hotel-card">
                    <img src="/img/room1.svg" alt="Hotel Room">
                    <div>
                        <h5>Luxury Suite</h5>
                        <p>₱3,500 per night - Up to 4 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room2.svg" alt="Hotel Room">
                    <div>
                        <h5>Deluxe Room</h5>
                        <p>₱2,800 per night - Up to 3 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room3.svg" alt="Hotel Room">
                    <div>
                        <h5>Standard Room</h5>
                        <p>₱2,000 per night - Up to 2 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room4.svg" alt="Hotel Room">
                    <div>
                        <h5>Premium Suite</h5>
                        <p>₱4,500 per night - Up to 5 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room4.svg" alt="Hotel Room">
                    <div>
                        <h5>Business Room</h5>
                        <p>₱3,000 per night - Up to 3 Guests</p>
                    </div>
                </div>
            </div>

            <div class="invoice-section">
                @if (ViewBag.BookingDetails != null)
                {
                    var details = (NewBooktel.Models.Booking)ViewBag.BookingDetails;
                    <div>
                        <h5 class="text-center">Booking Invoice</h5>
                        <hr />
                        <p><strong>Check-in:</strong> @details.CheckInDate?.ToShortDateString()</p>
                        <p><strong>Check-out:</strong> @details.CheckOutDate?.ToShortDateString()</p>
                        <p><strong>Guests:</strong> @details.Guest</p>
                        <p><strong>Room Type:</strong> @details.RoomType</p>
                    </div>
                }
                else
                {
                    <p>No booking made yet</p>
                }
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var today = new Date().toISOString().split('T')[0];
            var checkinDateInput = document.querySelector('input[name="CheckInDate"]');
            var checkoutDateInput = document.querySelector('input[name="CheckOutDate"]');

            if (checkinDateInput) {
                checkinDateInput.setAttribute('min', today);
                checkinDateInput.addEventListener('change', function () {
                    if (checkoutDateInput) {
                        checkoutDateInput.setAttribute('min', this.value);
                    }
                });
            }
            if (checkoutDateInput) {
                checkoutDateInput.setAttribute('min', today);
            }
        });
    </script>
</body>
</html>