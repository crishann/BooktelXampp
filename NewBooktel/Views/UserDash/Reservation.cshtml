@model NewBooktel.Models.Booking


@{
    ViewData["Title"] = "Reservation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookTel - Hotel Reservation</title>
    <link rel="stylesheet" href="~/css/UserDash.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

    <div class="main-container">
        <!-- Booking Form (Fixed at the Top) -->
        <div class="reservation-container">
            <form asp-action="Create" asp-controller="Booking" method="post">
                <div class="row g-2">
                    <div class="col-md-3">
                        <label class="fw-bold">Check-in Date</label>
                        <input asp-for="CheckInDate" type="date" class="form-control" id="checkin" required />
                    </div>

                    <div class="col-md-3">
                        <label class="fw-bold">Check-out Date</label>
                        <input asp-for="CheckOutDate" type="date" class="form-control" id="checkout" required />
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Guests</label>
                        <select asp-for="Guest" class="form-select">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="fw-bold">Room Type</label>
                        <select asp-for="RoomType" class="form-select">
                            <option value="Standard">Standard</option>
                            <option value="Deluxe">Deluxe</option>
                            <option value="Suite">Suite</option>
                            <option value="Premium Suite">Premium Suite</option>
                            <option value="Business">Bussiness</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-warning w-100">Book Now</button>
                    </div>
                </div>
            </form>

        </div>

        <!-- Below: Side-by-Side Layout for Hotels & Invoice -->
        <div class="content-container">
            <!-- Left Side: Scrollable Hotels List -->
            <div class="hotels-section">
                <h3 class="mb-3">Available Hotels & Rooms</h3>

                <div class="hotel-card">
                    <img src="/img/room1.svg" alt="Hotel Room">
                    <div>
                        <h5>Luxury Suite</h5>
                        <p>₱3,500 per night - Up to 4 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room2.svg" alt="Hotel Room">
                    <div>
                        <h5>Deluxe Room</h5>
                        <p>₱2,800 per night - Up to 3 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room3.svg" alt="Hotel Room">
                    <div>
                        <h5>Standard Room</h5>
                        <p>₱2,000 per night - Up to 2 Guests</p>
                    </div>
                </div>

                <!-- Duplicate hotel cards for scrolling demo -->
                <div class="hotel-card">
                    <img src="/img/room4.svg" alt="Hotel Room">
                    <div>
                        <h5>Premium Suite</h5>
                        <p>₱4,500 per night - Up to 5 Guests</p>
                    </div>
                </div>

                <div class="hotel-card">
                    <img src="/img/room4.svg" alt="Hotel Room">
                    <div>
                        <h5>Business Room</h5>
                        <p>₱3,000 per night - Up to 3 Guests</p>
                    </div>
                </div>
            </div>

            <!-- Right Side: Fixed Invoice -->
            <div class="invoice-section">
                <h3 class="mb-3">Booking Invoice</h3>
                <table class="table">
                    <tbody>
                        <tr>
                            <td><strong>Room Type:</strong></td>
                            <td>Deluxe Room</td>
                        </tr>
                        <tr>
                            <td><strong>Check-in:</strong></td>
                            <td>March 20, 2024</td>
                        </tr>
                        <tr>
                            <td><strong>Check-out:</strong></td>
                            <td>March 25, 2024</td>
                        </tr>
                        <tr>
                            <td><strong>Guests:</strong></td>
                            <td>2</td>
                        </tr>
                        <tr>
                            <td><strong>Nights:</strong></td>
                            <td>5</td>
                        </tr>
                        <tr>
                            <td><strong>Price per Night:</strong></td>
                            <td>₱2,800</td>
                        </tr>
                        <tr>
                            <td><strong>Total Amount:</strong></td>
                            <td>₱14,000</td>
                        </tr>
                        <tr>
                            <td><strong>Tax (12%):</strong></td>
                            <td>₱1,680</td>
                        </tr>
                        <tr>
                            <td><strong>Grand Total:</strong></td>
                            <td><strong>₱15,680</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <div class="col-md-3">
        <label class="fw-bold">Check-in Date</label>
        <input asp-for="CheckInDate" type="date" class="form-control" id="checkin" required />
    </div>

    <div class="col-md-3">
        <label class="fw-bold">Check-out Date</label>
        <input asp-for="CheckOutDate" type="date" class="form-control" id="checkout" required />
    </div>

    <script>
        const today = new Date();
        const yyyy = today.getFullYear();
        const mm = String(today.getMonth() + 1).padStart(2, '0');
        const dd = String(today.getDate()).padStart(2, '0');
        const minDate = `${yyyy}-${mm}-${dd}`;

        // Set the min date to today for both inputs
        document.getElementById("checkin").min = minDate;
        document.getElementById("checkout").min = minDate;

        // Optional: Auto-set checkout min to check-in + 1 day
        document.getElementById("checkin").addEventListener("change", function () {
            const checkInDate = new Date(this.value);
            checkInDate.setDate(checkInDate.getDate() + 1); // Next day
            const nextDay = checkInDate.toISOString().split('T')[0];
            document.getElementById("checkout").min = nextDay;
        });
    </script>

</body>
</html>
