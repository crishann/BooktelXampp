@model NewBooktel.Models.ContactUs

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - BookTel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .contact-section {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/img/contact-bg.jpg') no-repeat center center;
            background-size: cover;
            text-align: left;
            padding: 40px;
            color: black;
        }

        .contact-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 80%;
            max-width: 1000px;
        }

        .contact-info {
            flex: 1;
            padding-left: 40px;
            border-left: 4px solid #06183B;
            font-size: 1.1rem;
        }

            .contact-info h4 {
                font-size: 1.5rem;
            }

            .contact-info p {
                margin-bottom: 12px;
            }

        .contact-form {
            flex: 1;
            padding-right: 20px;
            color: black;
        }

        .form-floating label {
            color: #666;
        }

        .form-control {
            border-radius: 8px;
            font-size: 1rem;
        }

        .btn-custom {
            background-color: #06183B;
            color: white;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #F4A600;
                color: white
            }
    </style>
</head>
<body>

    <!-- Contact Us Section -->
    <section class="contact-section">
        <div class="contact-container">
            <!-- Contact Form on Left -->
            <form class="contact-form w-50" method="post" asp-action="SendMessage">
                @Html.AntiForgeryToken()

                <h3>Contact Us</h3>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                    <label for="name">Your Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required>
                    <label for="email">Your Email</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="message" name="message" placeholder="Your Message" style="height: 100px;" required></textarea>
                    <label for="message">Your Message</label>
                </div>
                <button type="submit" class="btn btn-custom w-100">Send Message</button>
            </form>

            <!-- Contact Info on Right -->
            <div class="contact-info text-start">
                <h4 class="fw-bold mb-3">Get in Touch</h4>
                <p class="text-muted">We’d love to hear from you! Reach out for any questions or assistance.</p>
                <p><i class="fas fa-map-marker-alt text-warning me-2"></i> Sanciangko St., Cebu City</p>
                <p><i class="fas fa-phone text-warning me-2"></i> +1 234 567 890</p>
                <p><i class="fas fa-envelope text-warning me-2"></i> support@booktel.com</p>
            </div>
        </div>
    </section>

    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
