@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - BookTel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Make the whole page fixed to one viewport */
        body, html {
            height: 100%;
            margin: 0;
            overflow: hidden; /* Prevent scrolling */
        }

        .contact-section {
            height: 100vh; /* Full screen height */
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/img/contact-bg.jpg') no-repeat center center;
            background-size: cover;
            text-align: center;
        }

        .contact-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            color: #333;
            width: 500px;
            max-width: 90%;
        }

            .contact-card h3 {
                font-size: 1.8rem;
                font-weight: bold;
            }

        .contact-info p {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .contact-info i {
            font-size: 1.5rem;
            margin-right: 10px;
            color: #007bff;
        }

        .form-control {
            border-radius: 5px;
            font-size: 1.1rem;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 5px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>

    <!-- Contact Us Section -->
    <section class="contact-section">
        <div class="contact-card">
            <h3>Contact Us</h3>
            <p>We're here to help! Get in touch with us for any inquiries.</p>

            <!-- Contact Info -->
            <div class="contact-info">
                <p><i class="fas fa-map-marker-alt"></i> Sanciangko St., Cebu City</p>
                <p><i class="fas fa-phone"></i> +1 234 567 890</p>
                <p><i class="fas fa-envelope"></i> support@booktel.com</p>
            </div>

            <!-- Contact Form -->
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Your Name" required>
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Your Email" required>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="3" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-custom w-100">Send Message</button>
            </form>
        </div>
    </section>

    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
