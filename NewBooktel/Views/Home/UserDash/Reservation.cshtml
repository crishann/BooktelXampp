@{
    ViewData["Title"] = "Reservation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookTel - Hotel Reservation</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .reservation-container {
            display: flex;
            height: 100vh;
        }

        .hotels-section {
            flex: 1.2;
            overflow-y: auto;
            padding: 20px;
            background: #f8f9fa;
        }

        .booking-section {
            flex: 0.8;
            padding: 20px;
            background: white;
            box-shadow: -3px 0 10px rgba(0, 0, 0, 0.1);
        }

        .hotel-card {
            display: flex;
            background: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 15px;
        }

            .hotel-card img {
                width: 100px;
                height: 100px;
                border-radius: 5px;
                margin-right: 15px;
            }

        .btn-book {
            background-color: #007bff;
            color: white;
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
        }

            .btn-book:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="reservation-container">
        <!-- Left Side: Hotels List -->
        <div class="hotels-section">
            <h3 class="mb-3">Available Hotels & Rooms</h3>

            <div class="hotel-card">
                <img src="/img/hotel1.jpg" alt="Hotel Room">
                <div>
                    <h5>Luxury Suite</h5>
                    <p>₱3,500 per night</p>
                    <button class="btn btn-book">Book Now</button>
                </div>
            </div>

            <div class="hotel-card">
                <img src="/img/hotel2.jpg" alt="Hotel Room">
                <div>
                    <h5>Deluxe Room</h5>
                    <p>₱2,800 per night</p>
                    <button class="btn btn-book">Book Now</button>
                </div>
            </div>

            <div class="hotel-card">
                <img src="/img/hotel3.jpg" alt="Hotel Room">
                <div>
                    <h5>Standard Room</h5>
                    <p>₱2,000 per night</p>
                    <button class="btn btn-book">Book Now</button>
                </div>
            </div>
        </div>

        <!-- Right Side: Booking Form -->
        <div class="booking-section">
            <h3 class="mb-3">Booking Details</h3>
            <form>
                <div class="mb-3">
                    <label for="hotel" class="form-label">Hotel/Room</label>
                    <select class="form-select" id="hotel">
                        <option selected>Select a Room</option>
                        <option value="1">Luxury Suite - ₱3,500</option>
                        <option value="2">Deluxe Room - ₱2,800</option>
                        <option value="3">Standard Room - ₱2,000</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="checkin" class="form-label">Check-in Date</label>
                    <input type="date" class="form-control" id="checkin" required>
                </div>

                <div class="mb-3">
                    <label for="checkout" class="form-label">Check-out Date</label>
                    <input type="date" class="form-control" id="checkout" required>
                </div>

                <div class="mb-3">
                    <label for="guests" class="form-label">Number of Guests</label>
                    <input type="number" class="form-control" id="guests" min="1" required>
                </div>

                <button type="submit" class="btn btn-book w-100">Confirm Booking</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
