@{
    ViewData["Title"] = "About";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - BookTel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .about-section {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            background: url('/img/hotel-bg.jpg') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 20px;
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        .about-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
        }

        h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        p {
            font-size: 1.2rem;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <section class="about-section">
        <div class="overlay"></div>
        <div class="about-content">
            <h1>About BookTel</h1>
            <p>Welcome to <strong>BookTel</strong>, your ultimate hotel reservation platform designed for seamless, stress-free bookings.</p>
            <p>We offer a wide selection of hotels, competitive pricing, and secure reservations to ensure you have the best experience.</p>
            <p>Trust <strong>BookTel</strong> to make your next stay comfortable and convenient.</p>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
