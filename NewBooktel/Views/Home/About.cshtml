@{
	ViewData["Title"] = "About";
}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookTel - Hotel Reservation</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
}



        <!-- CSS Styling -->
        <style>
        /* About Section */
        .about-section {
            background: url('img/hotel-bg.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 0;
            color: #222;
        }

            /* Headings */
            .about-section h1 {
                font-size: 3rem; /* Larger main heading */
                font-weight: 700;
                color: #333;
            }

            .about-section h3 {
                font-size: 2rem; /* Larger subheadings */
                font-weight: 600;
                color: #333;
            }

            /* Body Text */
            .about-section p {
                font-size: 1.25rem; /* Bigger paragraph text */
                line-height: 1.8; /* Better spacing */
                color: #444;
            }

            /* List Items */
            .about-section ul li {
                font-size: 1.2rem;
                margin-bottom: 10px;
                color: #444;
            }

                /* Icons */
                .about-section ul li i {
                    color: #007bff; /* Subtle blue for icons */
                    font-size: 1.3rem;
                    margin-right: 10px;
                }

        </style>


</head>
    <body>
    <!-- About Section -->
    <section class="about-section">
        <div class="container text-center">
            <h1 class="fw-bold">About BookTel</h1>
            <p class="lead">
                Welcome to <strong>BookTel</strong>, your ultimate hotel reservation platform, designed to make booking
                seamless, convenient, and stress-free.
            </p>
        </div>

        <div class="container mt-5">
            <div class="row">
                <!-- Left Column - Our Mission -->
                <div class="col-md-6 text-md-start text-center">
                    <h3 class="fw-bold">Our Mission</h3>
                    <p>
                        At <strong>BookTel</strong>, our mission is to simplify the booking process by providing an intuitive platform
                        with a wide selection of hotels, transparent pricing, and secure reservations.
                    </p>
                </div>

                <!-- Right Column - Why Choose Us? -->
                <div class="col-md-6 text-md-start text-center">
                    <h3 class="fw-bold">Why Choose Us?</h3>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check-circle"></i> <strong>Easy Booking</strong> – Find & book in seconds.</li>
                        <li><i class="fas fa-check-circle"></i> <strong>Best Price Guarantee</strong> – Competitive rates.</li>
                        <li><i class="fas fa-check-circle"></i> <strong>Luxury & Budget Options</strong> – Wide selection.</li>
                        <li><i class="fas fa-check-circle"></i> <strong>Secure Transactions</strong> – Safe payments.</li>
                        <li><i class="fas fa-check-circle"></i> <strong>24/7 Support</strong> – Always here to help.</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Commitment Section -->
        <div class="container text-center mt-5">
            <h3 class="fw-bold">Our Commitment</h3>
            <p>
                <strong>BookTel</strong> is committed to an exceptional booking experience, expanding our trusted network
                of hotel partners, and ensuring you enjoy a comfortable and stress-free stay.
            </p>
        </div>
    </section>

<!-- Font Awesome for Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>


    </body>
    </html>