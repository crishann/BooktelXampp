@model List<NewBooktel.Models.Room>

@{
    ViewData["Title"] = "Booktel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookTel - Hotel Reservation</title>

    <link href="Views\Shared\_Layout.cshtml.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Prevent horizontal scrolling */
        html, body {
            width: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Hero Section */
        .hero-section {
            width: 100%;
            height: 100vh;
            background: url('/img/bg.svg') no-repeat center center;
            background-size: cover;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            position: relative;
            text-align: center;
            color: #fff;
        }

        /* Dark overlay */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

        /* Hero Content */
        .hero-content {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            z-index: 2;
            color: white;
            width: 100%;
        }

        /* Booking Form */
        .booking-form-container {
            width: 100%;
            background: #06183B;
            padding: 15px 20px;
            border-top: 3px solid #06183B;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 80px;
        }

        /* Room Types */
        .room-card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            background-color: white; /* Dark blue background */
            color: black;
            text-align: center;
            padding: 15px; /* Ensure padding around the content */
        }

            .room-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }

            /* Ensure image fits inside padding */
            .room-card img {
                width: 100%;
                height: auto;
                max-height: 180px; /* Prevents images from being too large */
                object-fit: cover;
            }

        .book-btn {
            background-color: #06183B;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            padding: 8px 12px;
            border: none;
            width: 100%;
            margin-top: 10px;
        }

            .book-btn:hover {
                background-color: #2C4E80;
                color: white;
            }

        /* Services */
        .service-box {
            border: 2px solid #ccc;
            padding: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
            background-color: white;
            color: #00163a;
        }

            .service-box:hover {
                background-color: #00163a;
                color: white;
                border-color: #00163a;
            }

            .service-box i {
                font-size: 22px;
                margin-right: 10px;
            }

        .room-types-section {
            margin-bottom: 50px; /* Adjust as needed */
        }

        .services-section {
            margin-top: 40px;
            margin-bottom: 40px; /* Adjust this value for more/less spacing */
        }

        .tax-info {
            font-size: 12px;
            color: red;
            font-weight: bold;
        }

    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-overlay"></div>

        <div class="container hero-content">
            <h1 class="fw-bold mb-4">Find Your Perfect Stay</h1>
            <p class="lead">Book the best rooms at the best prices.</p>

            <!-- Booking Form -->
            <div class="booking-form-container">
                <form>
                    <div class="row g-2">
                        <div class="col-md-3">
                            <label class="fw-bold">Check-in Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Check-out Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label class="fw-bold">Guests</label>
                            <select class="form-select">
                                <option>1</option>
                                <option>2</option>
                                <option>3+</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="fw-bold">Room Type</label>
                            <select class="form-select">
                                <option>Standard</option>
                                <option>Deluxe</option>
                                <option>Suite</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-warning w-100">Book Now</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Room Types -->
    <div class="container mt-5">
        <h2 class="text-center fw-bold">Room Types</h2>
        <div class="row mt-4">

            @foreach (var room in Model)
            {
                <div class="col-md-3">
                    <div class="room-card">
                        <img src="@room.ImageUrl" alt="@room.Name">
                        <h5>@room.Name</h5>
                        <p>
                            ₱@room.Price 1 night
                            <br>
                            <span class="tax-info">+₱500 taxes and fees included.</span>
                        </p>
                        <button class="book-btn">BOOK NOW</button>
                    </div>
                </div>
            }

        </div>
    </div>


    <!-- Facilities Section -->
    <div class="container services-section text-center">
        <h2 class="fw-bold">Facilities</h2>
        <div class="row justify-content-center mt-3">
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-utensils"></i> Restaurant
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-dumbbell"></i> Fitness Center
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-swimmer"></i> Swimming Pool
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-glass-martini"></i> Bar
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-spa"></i> Spa & Wellness Center
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-wifi"></i> Free Wi-Fi
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-car"></i> Free Parking
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-user-shield"></i> Security 24/7
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-shuttle-van"></i> Airport Shuttle
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-box">
                    <i class="fas fa-water"></i> Infinity Pool
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
